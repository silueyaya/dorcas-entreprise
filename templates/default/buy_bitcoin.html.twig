{% extends 'base.html.twig' %}

{% block body %}
    <section class="bwt-news bwt-90">
        <div class="row">
        <div class="col-md-4 col-lg-4 ">
            
        </div>
            <div class="col-md-4 col-lg-4 ">
                <div class="box">
                    <div class="title-v1">
                        <p class="text-center">Entrez votre Addresse Bitcoin</p>
                    </div>

                    <div class="form-box">
                        <form action="{{ path('check_wallet')}}" method="GET" id="commentform-footer" class="comment-form" novalidate>

                            <div class="style name-container">
                                <input type="text"  placeholder="Addresse Bitcoin" name="addr" class="tb-my-input"  id="author-footer" tabindex="1"  size="32" aria-required="true" />
                            </div>
                            <div class="title-v1">
                            {% if test %}
                                <span class="text-center" style="color:white">Addresse Valide</span><br/>
                                <span class="text-center" style="color:white">balance : {{test.balance}}</span>
                            {% else %}
                                <span style="text-align:center;color:white"></span>
                            {% endif %}
                            </div>
                            <div class="submit-wrap text-center">
                                <button type="submit"  class="button-style ">Valider</button>
                            </div>
                        </form>
                    </div>
            </div>  
        </div>
    </section>

{% endblock %}