{% extends 'base.html.twig' %}

{% block body %}
    <section class="bwt-news bwt-90">
        <div class="container">
            <div class="row">
                <div id="respond" class="comment-respond contact style2 bwt-50">
                    <div class="title-section style1">
                        <h3 class="title">Assistance</h3>
                    </div>
                    <form id="contactform" class="bwt-contact-form style2 height-small" method="post" action="#">
                        <div class="field clearfix">      
                            <div class="wrap-type-input">                    
                                <div class="input-wrap name">
                                    <input type="text" value="" style="color:black !important;width: 100%;" tabindex="1" placeholder="Nom" name="name" id="name" required>
                                </div>
                                <div class="input-wrap email">
                                    <input type="email" value="" style="color:black !important;width: 100%;" tabindex="2" placeholder="Email" name="email" id="email" required>
                                </div>
                                <div class="input-wrap last Subject">
                                    <input type="text" value="" style="color:black !important;width: 100%;" placeholder="Objet" name="subject" id="subject" >
                                </div>  
                            </div>
                            <div class="textarea-wrap">
                                <textarea class="type-input" style="color:black !important;width: 100%;" tabindex="3" placeholder="Message" name="message" id="message-contact" required></textarea>
                            </div>
                        </div>
                        <div class="submit-wrap">
                            <button class="bwt-button bg-orange">Envoyer un Message(Mail)</button>
                        </div>
                    </form><!-- /.comment-form -->                     
                </div><!-- /#respond -->
            </div>
        </div>
    </section>

{% endblock %}